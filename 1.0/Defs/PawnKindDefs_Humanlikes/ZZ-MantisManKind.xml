<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  
  <!-- ============================ Mantis Civilians ========================== -->
  
  <PawnKindDef ParentName="MantisCivBase">
    <defName>MantisSpaceSoldier</defName>
    <label>mantis space soldier</label>
    <race>Alien_Mantis</race>
    <combatPower>100</combatPower>
    <baseRecruitDifficulty>0.30</baseRecruitDifficulty>
	
	<backstoryFiltersOverride>
		<li>
		<categories>
		<li>Civil</li>
		<li>Offworld</li>
		</categories>
		</li>
	</backstoryFiltersOverride>
	
    <!-- <defaultFactionType>SpacerHostile</defaultFactionType> -->
	<defaultFactionType>Pirate</defaultFactionType>
    <backstoryCryptosleepCommonality>1</backstoryCryptosleepCommonality>
    <maxGenerationAge>50</maxGenerationAge>
    <itemQuality>Good</itemQuality>
    <chemicalAddictionChance>0.08</chemicalAddictionChance>
	
    <apparelMoney>50~3200</apparelMoney>
	
		<apparelTags>
		<li>IndustrialBasic</li>
		<li>IndustrialAdvanced</li>
		<li>IndustrialMilitaryAdvanced</li>
		<li>IndustrialMilitaryBasic</li>
		<li>SpacerMilitary</li>
		<li>BeltDefensePop</li>
	</apparelTags>
	
    <apparelIgnoreSeasons>true</apparelIgnoreSeasons>
    <!-- <apparelAllowHeadwearChance>0.5</apparelAllowHeadwearChance> -->
    <weaponMoney>300~900</weaponMoney>
    <weaponTags>
      <li>Gun</li>
    </weaponTags>
    <techHediffsMoney>1000~5000</techHediffsMoney>
	
    <combatEnhancingDrugsCount>0~2</combatEnhancingDrugsCount>
	
    <techHediffsTags>
      <li>Advanced</li>
    </techHediffsTags>
    <techHediffsChance>0.3</techHediffsChance>
  </PawnKindDef>

  <PawnKindDef ParentName="MantisCivBase">
    <defName>MantisSpaceRefugee</defName>
    <label>mantis space refugee</label>
    <race>Alien_Mantis</race>
    <combatPower>25</combatPower>
    <baseRecruitDifficulty>0.30</baseRecruitDifficulty>
	
	<backstoryFiltersOverride>
		<li>
		<categories>
			<li>Civil</li>
			<li>Offworld</li>
		</categories>
		</li>
	</backstoryFiltersOverride>
	
    <defaultFactionType>Ancients</defaultFactionType>
    <backstoryCryptosleepCommonality>1</backstoryCryptosleepCommonality>
    <forceNormalGearQuality>true</forceNormalGearQuality>
    <isFighter>false</isFighter>
    <chemicalAddictionChance>0.08</chemicalAddictionChance>
    <gearHealthRange>0.4~1.4</gearHealthRange>
    <apparelMoney>500~2000</apparelMoney>
	
	<apparelTags>
		<li>IndustrialBasic</li>
		<li>IndustrialAdvanced</li>
		<li>IndustrialMilitaryAdvanced</li>
		<li>IndustrialMilitaryBasic</li>
		<li>SpacerMilitary</li>
	</apparelTags>
	
    <apparelIgnoreSeasons>true</apparelIgnoreSeasons>
    <!-- <apparelAllowHeadwearChance>0.5</apparelAllowHeadwearChance> -->
  </PawnKindDef>

</Defs>
