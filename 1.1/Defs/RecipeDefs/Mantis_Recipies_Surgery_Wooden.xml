<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<RecipeDef Name="LTF_InstallWoodenClaws" ParentName="LTF_InstallSyntClaws" Abstract="true">
		<label>install wooden claws</label>
		
		<descriptionHyperlinks>
			<HediffDef>Hediff_LTF_WoodenClaws</HediffDef>
			<thingDef>WoodLog</thingDef>
			<ResearchProjectDef>LTF_Research_MantisBladeT0</ResearchProjectDef>
		</descriptionHyperlinks>
		
		
		<researchPrerequisite>LTF_Research_MantisBladeT0</researchPrerequisite>
	</RecipeDef>

	<!-- install right claws -->
	<RecipeDef ParentName="LTF_InstallWoodenClaws">
		<defName>LTF_InstallRightWoodenClaws</defName>
		<label>Install right wooden claw</label>
		<description>Installs right wooden claws.</description>

		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Medicine</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>

		<fixedIngredientFilter>
			<categories>
				<li>Medicine</li>
			</categories>
			<thingDefs>
				<li>WoodLog</li>
			</thingDefs>
		</fixedIngredientFilter>

		<appliedOnFixedBodyParts>
			<li>BodyPart_LTF_RightClaws</li>
		</appliedOnFixedBodyParts>

		<addsHediff>Hediff_LTF_WoodenClaws</addsHediff>
	</RecipeDef>

